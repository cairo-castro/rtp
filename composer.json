{
    "name": "emserh/rtp-hospital-report",
    "description": "Sistema de Acompanhamento DiÃ¡rio de Produtividade para Unidades Hospitalares",
    "type": "project",
    "keywords": ["hospital", "produtividade", "relatorio", "mvc", "php"],
    "license": "proprietary",
    "version": "1.0.0",
    "authors": [
        {
            "name": "Equipe EMSERH",
            "email": "dev@emserh.ma.gov.br"
        }
    ],
    "require": {
        "php": ">=7.4",
        "ext-pdo": "*",
        "ext-pdo_mysql": "*",
        "ext-json": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        },
        "files": [
            "src/helpers/relatorio_helpers.php",
            "src/config/database.php"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "scripts": {
        "test": "phpunit",
        "check-syntax": "find src/ -name '*.php' -exec php -l {} \\;",
        "fix-permissions": "chmod -R 755 public/ && chmod -R 644 src/"
    },
    "extra": {
        "branch-alias": {
            "dev-main": "1.0-dev"
        }
    }
}
